<h1 class="pt-5">Timeline for {{ name }} </h1>
 <h4 class="name">{{user.name}}</h4>

<div class="posts" >
  {{#each posts}}
  <div class="card w-50">
    {{#if this.imagePath}}
  <img class="card-img-top" src="{{this.imagePath}}" style="width: 300px">
  {{/if}}
  <div class="card-body">
    <img src="/uploads/images/{{this.user.image}}" style="height:60px; width:60px;">
    <form action="/profile/viewperson/{{this.user._id}}" method="post">
      <input type="hidden">
      <button class="btn btn-link p-0" name="userId" ><h5 class="card-title">{{this.user.name}}</h5></button>
    <small class="text-muted" id="createdAt">, on {{this.postedAt}}</small></h5>
    </form>
   <p class="lead card-text">{{this.message}}</p>

  <form action="/posts/like/{{this._id}}" method="post" id = "like_{{this._id}}">
    <input type="hidden" name="prevRoute" value="posts">
    <button id="like" name="postId" value="{{this._id}}" class="btn btn-primary btn-sm">Like {{this.likes}}</button>
  </form>  
  </div>
  {{> comments}}
    
  </div>
  
  {{/each}}
