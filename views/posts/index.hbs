
<h1>Timeline for {{ name }} </h1>
 <h4 class="name">{{user.name}}</h4>
<div class="posts" >
  {{#each posts}}
  <div>{{this.user.name}} <br>
  {{this.message}}     -      <div id="createdAt">{{this.postedAt}}</div> <br> 
  <form action="/posts/like/{{this._id}}" method="post" id = "like_{{this._id}}">
    <button id="like" name="postId" value="{{this._id}}">Like</button>
  </form> - <div id="likecount">{{this.likes}}</div> 
  </div>
  <br>
  <div class = "comments">
    {{#each this.comments}}
      <div>{{this.user}} says {{this.comment}}</div>
    {{/each}}
  </div>
  <div class="addComment">
    <form action="/posts/comment/new" method="post">
      <input type="text" name="comment" id="input-comment">
      <button id="comment-btn" name="postId" value="{{this._id}}">Comment</button>
    </form>
  </div>
  {{/each}}
<div>

<a class="new-post-link" href="/posts/new">New post</a>
<a class="view-profile-link" href="./users/profile">Profile</a>

