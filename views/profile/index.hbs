<h1 class="pt-5">All About {{name}}</h1>

{{#if self}}
  {{> profile}}
{{else}}
  {{name}}
  {{bio}}
{{/if}}

<div class="card" style="width: 60rem;">
      <div class="card-body">
<div class="friends">
  {{#if self}}
  <h2 class="pt-3">My friends</h2>
  {{else}}
  <h2 class="pt-3">{{name}}'s friends</h2>
  {{/if}}
  <ul>
  {{#each friends}}
  <div class="card" style="width: 18rem;">
  <div class="card-body">
    <img src="/uploads/images/{{this.image}}" style="height:60px; width:60px;">
    <h5 class="card-title">{{this.name}}</h5>
    <p class="card-text">A good friend.</p>
    <a href="#" class="btn btn-primary">Visit profile</a>
    <a href="/profile/friendlist" class="btn btn-primary">View all friends</a>
  </div>
</div>
  {{/each}}
</div>
<div class="posts pt-3" >
  <h2 class="pt-3">My posts</h2>
  {{#each posts}}
  <div class="card w-50">
    {{#if this.imagePath}}
  <img class="card-img-top" src="{{this.imagePath}}" style="width: 300px">
  {{/if}}
  <div class="card-body">
    <img src="/uploads/images/{{this.user.image}}" style="height:60px; width:60px;">
    <h5 class="card-title"><a href="/profile/viewperson/{{this.user._id}}">{{this.user.name}}</a><small class="text-muted" id="createdAt">, on {{this.postedAt}}</small></h5>
   <p class="lead card-text">{{this.message}}</p>
  <form action="/posts/like/{{this._id}}" method="post" id = "like_{{this._id}}">
    <input type="hidden" name="prevRoute" value="posts">
    <button id="like" name="postId" value="{{this._id}}" class="btn btn-primary btn-sm">Like {{this.likes}}</button>
  </form>  
  </div>
  {{> comments}}
     

  
  </div>
  
  {{/each}}
</div>
</main>
